generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  CLIENT
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  LAND
  OFFICE
  AIRBNB
  OTHER
}

enum PropertyStatus {
  FOR_SALE
  FOR_RENT
  SOLD
  RENTED
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELED
}

enum Currency {
  USD
  EUR
  LBP
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(CLIENT)
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  favorites    Favorite[]
  appointments Appointment[]

  @@index([email])
  @@index([role])
}

model Property {
  id          String         @id @default(cuid())
  title       String
  slug        String         @unique
  description String?        @db.Text
  type        PropertyType
  status      PropertyStatus
  price       Float
  currency    String         @default("USD")

  country     String
  city        String
  region      String?
  address     String?
  latitude    Float?
  longitude   Float?

  area        Float?
  landArea    Float?

  rooms         Int?
  bedrooms      Int?
  bathrooms     Int?
  floor         Int?
  parkingSpaces Int?
  yearBuilt     Int?

  isFeatured  Boolean  @default(false)
  isPublished Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images       PropertyImage[]
  appointments Appointment[]
  favorites    Favorite[]
  leads        Lead[]

  @@index([slug])
  @@index([type])
  @@index([status])
  @@index([country])
  @@index([city])
  @@index([isFeatured])
  @@index([isPublished])
  @@index([price])
}

model PropertyImage {
  id         String  @id @default(cuid())
  url        String
  publicId   String
  isPrimary  Boolean @default(false)
  order      Int     @default(0)
  propertyId String

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([isPrimary])
  @@index([order])
}

model Appointment {
  id         String            @id @default(cuid())
  userId     String?
  propertyId String

  name    String
  email   String
  phone   String
  message String?           @db.Text
  date    DateTime
  status  AppointmentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([propertyId])
  @@index([status])
  @@index([date])
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
}

model Lead {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  message    String   @db.Text
  source     String
  propertyId String?
  isHandled  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([createdAt])
  @@index([propertyId])
  @@index([isHandled])
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String
  userEmail String
  details   String?  @db.Text
  createdAt DateTime @default(now())

  @@index([action])
  @@index([entity])
  @@index([userEmail])
  @@index([createdAt])
}

enum LogLevel {
  INFO
  WARN
  ERROR
  CRITICAL
}

enum LogType {
  API_REQUEST
  API_ERROR
  SYSTEM_ERROR
  CRON_JOB
  DATABASE
  AUTH
  PERFORMANCE
  SECURITY
}

model SystemLog {
  id        String   @id @default(cuid())
  level     LogLevel
  type      LogType
  message   String   @db.Text

  // Context
  source    String?  // API route, component name, function name
  method    String?  // HTTP method for API requests
  url       String?  // Full URL for requests
  statusCode Int?    // HTTP status code

  // Performance
  responseTime Int?  // Response time in milliseconds

  // Error details
  errorStack String? @db.Text
  errorName  String?

  // User context
  userEmail  String?
  userId     String?

  // Request context
  locale     String?
  userAgent  String?
  ipAddress  String?

  // Additional metadata
  metadata   String? @db.Text // JSON string for additional data

  createdAt DateTime @default(now())

  @@index([level])
  @@index([type])
  @@index([createdAt])
  @@index([userEmail])
  @@index([source])
  @@index([statusCode])
}

enum CronJobStatus {
  SUCCESS
  FAILED
  RUNNING
}

model CronJobLog {
  id          String        @id @default(cuid())
  jobName     String        // Name of the cron job
  status      CronJobStatus
  startedAt   DateTime      @default(now())
  completedAt DateTime?
  duration    Int?          // Duration in milliseconds
  message     String?       @db.Text
  error       String?       @db.Text
  recordsProcessed Int?     // Number of records processed
  metadata    String?       @db.Text // JSON for additional data

  @@index([jobName])
  @@index([status])
  @@index([startedAt])
}

model Settings {
  id        String   @id @default(cuid())

  // General Settings
  platformName      String   @default("Spot Properties")
  supportEmail      String   @default("support@spotproperties.com")
  defaultCurrency   Currency @default(USD)

  // Contact & WhatsApp
  whatsappNumber    String?
  contactPhone      String?
  contactEmail      String?

  // SEO Defaults
  defaultMetaTitle       String?
  defaultMetaDescription String?

  // Home Page Configuration
  homepageTitle    String?
  homepageSubtitle String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
